# HydraFlow-X Configuration Template
# Copy this file to .env and fill in your API keys and configuration

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
HFX_PRIMARY_CHAIN=ethereum
HFX_MAX_POSITION_SIZE=10000.0
HFX_MAX_SLIPPAGE=2.0
HFX_MIN_PROFIT=0.5
HFX_MAX_CONCURRENT_TRADES=5
HFX_ENABLE_MEV_PROTECTION=true

# =============================================================================
# API CONFIGURATIONS
# =============================================================================

# Twitter API v2 (Essential for sentiment analysis)
# Get from: https://developer.twitter.com/en/portal/petition/essential/basic-info
HFX_TWITTER_API_KEY=YOUR_TWITTER_API_KEY_HERE
HFX_TWITTER_SECRET_KEY=YOUR_TWITTER_SECRET_KEY_HERE
HFX_TWITTER_BEARER_TOKEN=YOUR_TWITTER_BEARER_TOKEN_HERE
HFX_TWITTER_BASE_URL=https://api.twitter.com/2
HFX_TWITTER_RATE_LIMIT=50
HFX_TWITTER_ENABLED=true

# Reddit API (Community sentiment)
# Get from: https://www.reddit.com/prefs/apps
HFX_REDDIT_API_KEY=YOUR_REDDIT_CLIENT_ID_HERE
HFX_REDDIT_SECRET_KEY=YOUR_REDDIT_CLIENT_SECRET_HERE
HFX_REDDIT_BASE_URL=https://oauth.reddit.com
HFX_REDDIT_RATE_LIMIT=30
HFX_REDDIT_ENABLED=true

# DexScreener API (Market data)
# Get from: https://dexscreener.com/pro
HFX_DEXSCREENER_API_KEY=YOUR_DEXSCREENER_API_KEY_HERE
HFX_DEXSCREENER_BASE_URL=https://api.dexscreener.com/latest
HFX_DEXSCREENER_RATE_LIMIT=100
HFX_DEXSCREENER_ENABLED=true

# GMGN API (Smart money tracking)
# Get from: https://t.me/gmgnai
HFX_GMGN_API_KEY=YOUR_GMGN_API_KEY_HERE
HFX_GMGN_BASE_URL=https://gmgn.ai/api
HFX_GMGN_RATE_LIMIT=50
HFX_GMGN_ENABLED=false

# =============================================================================
# RPC CONFIGURATIONS
# =============================================================================

# Ethereum RPC (Primary)
# Recommended: Alchemy (https://dashboard.alchemy.com/signup)
HFX_ETHEREUM_RPC_ENDPOINT=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
HFX_ETHEREUM_RPC_API_KEY=YOUR_ALCHEMY_API_KEY_HERE
HFX_ETHEREUM_RPC_WS_ENDPOINT=wss://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
HFX_ETHEREUM_RPC_TIMEOUT=5000
HFX_ETHEREUM_RPC_MAX_CONNECTIONS=10

# Solana RPC
# Recommended: Helius (https://dashboard.helius.xyz/signup)
HFX_SOLANA_RPC_ENDPOINT=https://rpc.helius.xyz/?api-key=YOUR_HELIUS_API_KEY
HFX_SOLANA_RPC_API_KEY=YOUR_HELIUS_API_KEY_HERE
HFX_SOLANA_RPC_WS_ENDPOINT=wss://rpc.helius.xyz/?api-key=YOUR_HELIUS_API_KEY
HFX_SOLANA_RPC_TIMEOUT=3000
HFX_SOLANA_RPC_MAX_CONNECTIONS=20

# Base Chain RPC
HFX_BASE_RPC_ENDPOINT=https://mainnet.base.org
HFX_BASE_RPC_API_KEY=
HFX_BASE_RPC_WS_ENDPOINT=wss://mainnet.base.org
HFX_BASE_RPC_TIMEOUT=5000
HFX_BASE_RPC_MAX_CONNECTIONS=10

# Arbitrum RPC
HFX_ARBITRUM_RPC_ENDPOINT=https://arb1.arbitrum.io/rpc
HFX_ARBITRUM_RPC_API_KEY=
HFX_ARBITRUM_RPC_WS_ENDPOINT=wss://arb1.arbitrum.io/ws
HFX_ARBITRUM_RPC_TIMEOUT=5000
HFX_ARBITRUM_RPC_MAX_CONNECTIONS=10

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
HFX_DB_HOST=localhost
HFX_DB_PORT=5432
HFX_DB_NAME=hydraflow
HFX_DB_USER=hydraflow
HFX_DB_PASSWORD=YOUR_DB_PASSWORD_HERE

# Redis (Optional - for caching)
HFX_REDIS_HOST=localhost
HFX_REDIS_PORT=6379
HFX_REDIS_PASSWORD=
HFX_REDIS_DB=0

# ClickHouse (Optional - for analytics)
HFX_CLICKHOUSE_HOST=localhost
HFX_CLICKHOUSE_PORT=8123
HFX_CLICKHOUSE_DB=hydraflow_analytics
HFX_CLICKHOUSE_USER=default
HFX_CLICKHOUSE_PASSWORD=

# =============================================================================
# WEB DASHBOARD CONFIGURATION
# =============================================================================
HFX_WEB_PORT=8080
HFX_WEB_HOST=0.0.0.0
HFX_WEB_AUTH=true
HFX_WEB_USERNAME=admin
HFX_WEB_PASSWORD=CHANGE_THIS_PASSWORD

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
HFX_JWT_SECRET=YOUR_VERY_SECURE_JWT_SECRET_AT_LEAST_32_CHARACTERS
HFX_ENABLE_HSM=false
HFX_HSM_PROVIDER=software

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
HFX_LOG_LEVEL=INFO
HFX_LOG_FORMAT=JSON
HFX_LOG_OUTPUT=file
HFX_ENABLE_PROMETHEUS=true
HFX_PROMETHEUS_PORT=9090

# =============================================================================
# ADVANCED TRADING FEATURES
# =============================================================================

# MEV Protection
HFX_MEV_PROTECTION_LEVEL=HIGH
HFX_USE_PRIVATE_RELAYS=true
HFX_FLASHBOTS_ENABLED=true
HFX_JITO_ENABLED=true

# Gas Management
HFX_GAS_PRICE_MULTIPLIER=1.2
HFX_MAX_GAS_PRICE_GWEI=100
HFX_DYNAMIC_GAS_PRICING=true

# Risk Management
HFX_MAX_DRAWDOWN_PERCENT=5.0
HFX_STOP_LOSS_PERCENT=2.0
HFX_TAKE_PROFIT_PERCENT=10.0

# =============================================================================
# WALLET CONFIGURATION (Use with extreme caution!)
# =============================================================================

# Primary trading wallet private key (NEVER commit this to version control!)
# HFX_WALLET_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE

# Backup wallet
# HFX_BACKUP_WALLET_PRIVATE_KEY=YOUR_BACKUP_PRIVATE_KEY_HERE

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
HFX_ENVIRONMENT=development
HFX_DEBUG_MODE=true
HFX_AUTO_RESTART=true
HFX_ENABLE_HEALTH_CHECKS=true
HFX_HEALTH_CHECK_INTERVAL=30

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
HFX_BACKUP_ENABLED=true
HFX_BACKUP_INTERVAL_HOURS=6
HFX_BACKUP_RETENTION_DAYS=30
HFX_BACKUP_LOCATION=./backups

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
HFX_WORKER_THREADS=8
HFX_MAX_MEMORY_MB=4096
HFX_ENABLE_PROFILING=false
HFX_LATENCY_OPTIMIZATION=ultra

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
HFX_ENABLE_NOTIFICATIONS=true
HFX_NOTIFICATION_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
HFX_NOTIFICATION_EMAIL=your-email@example.com
HFX_NOTIFICATION_PHONE=+1234567890

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
HFX_TEST_MODE=false
HFX_PAPER_TRADING=true
HFX_SIMULATION_MODE=false
HFX_TEST_WALLET_ADDRESS=0x742d35Cc6634C0532925a3b8D371D6E1DaE38000
